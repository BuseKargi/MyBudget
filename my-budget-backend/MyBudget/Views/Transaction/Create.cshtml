
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-lg-6">
                                <h4 class="card-title mb-4">Yeni Islem</h4>
                                @using (Html.BeginForm("Create", "Transaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="basic-form">
                                        <form>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Islem Adı</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Name" id="Name" placeholder="Islem Adı">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Açıklama</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Description" id="Description" placeholder="Açıklama">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-3">Hesap</div>
                                                <div class="col-sm-9 col-auto my-1">
                                                    @Html.DropDownList("AccountId", null, "Hesap Seçin", htmlAttributes: new { @class = "form-control" })

                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-3">Kategori</div>
                                                <div class="col-sm-9 col-auto my-1">
                                                    @Html.DropDownList("CategoryId", null, "Ana Kategori Seçin", htmlAttributes: new { @class = "form-control" })

                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Tutar</label>
                                                <div class="col-md-9 form-group">
                                                    <input type="text" class="col-md-5 form-control input-rounded" name="Amount" id="Amount" placeholder="Tutar...">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-dark">Ekle</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                }
                                </div>
                            <div class="col-lg-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>