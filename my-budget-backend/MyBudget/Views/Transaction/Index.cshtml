@model IEnumerable<MyBudget.Models.Transaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="button-icon">
                            <a href="/Transaction/Create" class="btn mb-1 btn-primary">
                                Yeni Islem <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>
                        </div><hr />
                        <div class="card-title">
                            <h4>Islemler</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Islem</th>
                                        <th>Aciklama</th>
                                        <th>Hesap</th>
                                        <th>Kategori</th>
                                        <th>Tarih</th>
                                        <th>Tutar</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <img src="~/Assets/images/account/@item.Account.Logo" height="20" class=" rounded-circle mr-3" alt="">
                                                @item.Account.Name
                                            </td>
                                            <td><span class="badge badge-primary px-2">@item.Category.Name</span></td>
                                            <td>@item.ModifiedDate</td>
                                            <td class="color-primary">@item.Amount</td>
                                            <td><span><a href="/Transaction/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Düzenle"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a href="/Transaction/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-close color-danger"></i></a></span></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
        </div>

    </div>
    <!-- #/ container -->
</div>

