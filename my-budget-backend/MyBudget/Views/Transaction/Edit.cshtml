@model MyBudget.Models.Transaction
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-lg-6">
                                <h4 class="card-title mb-4">Islem Güncelle</h4>

                                @using (Html.BeginForm("Edit", "Transaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    <div class="basic-form">
                                        <form>
                                            <div class="form-group row" hidden="hidden">
                                                <label class="col-sm-3 col-form-label">Id</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Id" id="Name" value="@Model.Id" placeholder="ID">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Islem Adı</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" placeholder="Islem Adı">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Islem Aciklamasi</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" name="Description" id="Description" value="@Model.Description" placeholder="Aciklama">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-3">Hesap</div>
                                                <div class="col-sm-9">
                                                    @Html.DropDownList("AccountId", null, null, htmlAttributes: new { @class = "form-control" })

                                                </div>
                                            </div>
                                            

                                            <div class="form-group row">
                                                <div class="col-sm-3">Alt Kategori</div>
                                                <div class="col-sm-9">
                                                    @Html.DropDownList("CategoryId", null, null, htmlAttributes: new { @class = "form-control" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Tutar</label>
                                                <div class="col-md-9 form-group">
                                                    <input type="text" class="col-md-5 form-control input-rounded" name="Amount" id="Amount" value="@Model.Amount" placeholder="Tutar...">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-dark">Güncelle</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                }

                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


